addon "evm" {
    chain_id = 1
    rpc_api_url = "https://mainnet.infura.io"
}

signer "deployer" "evm::secret_key" {
    secret_key = input.private_key
}

action "send" "evm::send_eth" {
    signer = signer.deployer
    to = "0x1234567890123456789012345678901234567890"
    value = evm::to_wei(0.1, "ether")
}

// This should trigger an error - send_eth doesn't have a 'from' field
output "sender" {
    value = action.send.from
}

// This should trigger an error - send_eth doesn't have a 'to' field  
output "recipient" {
    value = action.send.to
}

// This should be fine - send_eth has tx_hash
output "tx_hash" {
    value = action.send.tx_hash
}