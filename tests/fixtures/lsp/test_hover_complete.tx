// Complete test file for hover functionality
// This file tests both function and action hover

addon "evm" "latest" {
    chain_id = 11155111
    rpc_api_url = "https://eth-sepolia.g.alchemy.com/v2/demo"
}

// Test function hovers
variable "contract" {
    // Hover over evm::get_contract_from_foundry_project
    value = evm::get_contract_from_foundry_project("SimpleStorage")
}

variable "wei_amount" {
    // Hover over evm::to_wei
    value = evm::to_wei(1.5, "ether")
}

variable "encoded" {
    // Hover over std::encode_hex
    value = std::encode_hex("hello world")
}

// Test action hovers
action "deploy" "evm::deploy_contract" {
    // Hover over evm::deploy_contract in the action line above
    contract = variable.contract
    signer = "deployer"
}

action "call" "evm::call_contract" {
    // Hover over evm::call_contract in the action line above
    contract_address = action.deploy.contract_address
    function_name = "set"
    function_args = [42]
    signer = "deployer"
}

signer "deployer" "evm::private_key" {
    private_key = "0x..."
}