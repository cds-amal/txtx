addon "evm" {
    chain_id = 1
    rpc_api_url = "https://mainnet.infura.io"
}

signer "alice" "evm::secret_key" {
    secret_key = "0x1234567890123456789012345678901234567890123456789012345678901234"
}

action "transfer" "evm::send_eth" {
    signer = signer.alice
    recipient_address = "0x742d35Cc6634C0532925a3b844Bc9e7595f62b12"
    amount = 1000000000000000000  // 1 ETH
}

// This output is CORRECT - tx_hash is the only output from send_eth
output "transaction_hash" {
    value = action.transfer.tx_hash
}

// ERROR: These outputs will fail - send_eth doesn't provide these
output "sender" {
    value = action.transfer.from  // ERROR: 'from' not available
}

output "receiver" {
    value = action.transfer.to  // ERROR: 'to' not available
}

// ERROR: Trying to access properties on tx_hash as if it's an object
output "tx_from" {
    value = action.transfer.tx_hash.from  // ERROR: tx_hash is a string, not object
}

// ERROR: Reference to undefined action
output "missing_action" {
    value = action.nonexistent.result
}