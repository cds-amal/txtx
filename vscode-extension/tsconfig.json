{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "out",
    "lib": ["es2018"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", ".vscode-test", "out", "test"]
}